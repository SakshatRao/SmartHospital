void setup(){
  Serial.begin(9600);
  
  delay(1500);
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3D))
  {
    Serial.println("Failed!");
    for(;;);
  }
  else
  {
    Serial.println("Passed!");
  }
}

void loop()
{ 
  display.clearDisplay(); //for Clearing the display
  display.drawBitmap(0, 0, celcius, 24, 24, WHITE); // display.drawBitmap(x position, y position, bitmap data, bitmap width, bitmap height, color)
